<!-- Modal -->
<div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header"">
                <h5 class="modal-title" id="exampleModalLabel">Enter name to compete with your friends!</h5>
            </div>
            <div class="modal-body">
                <form>
                    <div class="col-md-4 mb-3">
                        <input type="text" class="form-control" id="playerName" placeholder="Enter name" style="color:orange" value="" required>
                    </div>

                    <h6>PLEASE SELECT DIFFICULTY LEVEL</h6>
                   <div class="container">
                       <div class="row">
                           <div class="col-md-4">

                        <li class="modal-li">
                            <div class="ch-item">
                                <div class="ch-info">
                                    <div class="ch-info-front2 ch-img-1"></div>
                                    <div class="ch-info-back diffButton">
                                            <h4 data-id="easy">Easy</h4>
                                    </div>
                                </div>
                            </div>
                        </li>
                        </div>
                        <div class="col-md-4">
                        <li class="modal-li">
                            <div class="ch-item">
                                <div class="ch-info">
                                    <div class="ch-info-front2 ch-img-2"></div>
                                    <div class="ch-info-back diffButton">
                                            <h4 data-id="medium">Medium</h4>
                                    </div>
                                </div>
                            </div>
                        </li>
                        </div>
                        <div class="col-md-4">
                        <li class="modal-li">
                            <div class="ch-item">
                                <div class="ch-info">
                                    <div class="ch-info-front2 ch-img-3"></div>
                                    <div class="ch-info-back diffButton">
                                            <h4 data-id="hard">Hard</h4>
                                    </div>
                                </div>
                            </div>
                        </li>
                        </div>
                        </div>
                        </div>

                   
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-dismiss="modal" id="log-in">READY!</button>
            </div>
        </div>
    </div>
</div>
