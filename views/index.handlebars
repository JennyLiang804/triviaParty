<section class="main">

    <ul class="ch-grid">
        {{#each topRow}}
        <li>
            <div class="ch-item">
                <div class="ch-info">
                    <div class="ch-info-front" style="background-image: url('./images/{{img}}.jpg')"></div>
                    <div class="ch-info-back {{category}}">
                        <br>
                        <a href="/category/{{diff}}/{{id}}">
                            <h3 data-id="{{id}}" class="category">{{category}}</h3>
                        </a>
                    </div>
                </div>
            </div>
        </li>
        {{/each}}

    </ul>

    <ul class="ch-grid">
        {{#each middleRow}}
        <li>
            <div class="ch-item">
                <div class="ch-info">
                    <div class="ch-info-front" style="background-image: url('./images/{{img}}.jpg')"></div>
                    <div class="ch-info-back {{category}}">
                        <br>
                        <a href="/category/{{diff}}/{{id}}">
                            <h3 data-id="{{id}}" class="category">{{category}}</h3>
                        </a>
                    </div>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>

    <ul class="ch-grid">
        {{#each bottomRow}}
        <li>
            <div class="ch-item">
                <div class="ch-info">
                    <div class="ch-info-front" style="background-image: url('./images/{{img}}.jpg')"></div>
                    <div class="ch-info-back {{category}}">
                        <br>
                        <a href="/category/{{diff}}/{{id}}">
                            <h3 data-id="{{id}}" class="category">{{category}}</h3>
                        </a>
                    </div>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>

    <button type="menu" class="btn btn-light btn-lg outline" id="showHighScores">Show High Scores</button>

    <div class="modal fade" id="highScoresModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title answerTitle" id="exampleModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="scoresClose" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="highScoresBody">
                        <table class="highScoreTable" style="width: 100%">
                        <tr style="border-bottom: 2px solid black">
                        <td>Place: </td>
                        <td>Name: </td>
                        <td>High Score: </td>
                        </tr>
                        </table>
                    </p>
                </div>
            </div>
        </div>
    </div>


</section>






<!-- Modal -->
<div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header"">
                <h5 class="modal-title" id="exampleModalLabel">Enter name to compete with your friends!</h5>
            </div>
            <div class="modal-body">
                <form>
                    <div class="col-md-4 mb-3">
                        <input type="text" class="form-control" id="playerName" placeholder="Enter name" style="color:orange" value="" required>
                    </div>

                    <h6>PLEASE SELECT DIFFICULTY LEVEL</h6>
                   <div class="container">
                       <div class="row">
                           <div class="col-md-4">

                        <li class="modal-li">
                            <div class="ch-item">
                                <div class="ch-info">
                                    <div class="ch-info-front2 ch-img-1"></div>
                                    <div class="ch-info-back diffButton">
                                            <h4 data-id="easy">Easy</h4>
                                    </div>
                                </li>
                            </div>
                            <div class="col-md-4">
                                <li class="modal-li">
                                    <div class="ch-item">
                                        <div class="ch-info">
                                            <div class="ch-info-front2 ch-img-2"></div>
                                            <div class="ch-info-back diffButton">
                                                <h4 data-id="medium">Medium</h4>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </div>
                            <div class="col-md-4">
                                <li class="modal-li">
                                    <div class="ch-item">
                                        <div class="ch-info">
                                            <div class="ch-info-front2 ch-img-3"></div>
                                            <div class="ch-info-back diffButton">
                                                <h4 data-id="hard">Hard</h4>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </div>
                        </div>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-dismiss="modal" id="log-in">READY!</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="pointsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title pointsTitle" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="pointsClose" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="pointsBody"></p>
                <button type="submit" id="submitHighScore">Submit Score</button>
            </div>
        </div>
    </div>
</div>

